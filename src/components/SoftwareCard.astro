---
export interface Props {
  name: string;
  href: string;
}
const { name, href }: Props = Astro.props;
---

<div
  class="flow dark-drop-shadow grid aspect-square items-baseline rounded bg-zinc-200 p-6 dark:bg-zinc-800"
>
  <h3 class="text-center text-xl">
    <a
      href={href}
      target="_blank"
      rel="noopener noreferrer"
      aria-label=`Check out ${name}`>{name}</a
    >
  </h3>
  <slot />
</div>
