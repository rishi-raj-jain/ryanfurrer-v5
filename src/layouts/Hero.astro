---
import "../styles/global.css";

export interface Props {
  heroHeader: string;
  heroDescription?: string;
  heroParagraph?: string;
  heroImage?: string;
}

const { heroDescription, heroHeader, heroParagraph, heroImage }: Props =
  Astro.props;
---

<section
  id="hero"
  class="container mx-auto grid h-3/4 grid-cols-1 place-content-around lg:grid-cols-2 lg:place-items-center lg:gap-12"
>
  <div
    id="hero-img-container"
    class="container animate-fade animate-delay-500 animate-duration-500 animate-once animate-ease-in-out lg:self-auto"
  >
    <img src={heroImage} alt="logo" />
  </div>
  <div
    id="hero-text-container"
    class="align-end container grid gap-[1em] lg:self-auto"
  >
    <div
      id="hero-header-container"
      class="animate-fade animate-delay-700 animate-duration-500 animate-once animate-ease-in-out"
    >
      <h2>
        {heroHeader}
      </h2>
    </div>
    <div
      id="hero-description-container"
      class="animate-fade-down animate-delay-1000 animate-duration-700 animate-once animate-ease-in-out"
    >
      <p>
        {heroDescription}
      </p>
    </div>
    <div
      id="hero-paragraph-container"
      class="animate-fade-down animate-delay-[1200ms] animate-duration-500 animate-once animate-ease-in-out"
    >
      <p>
        {heroParagraph}
      </p>
    </div>
  </div>
</section>
